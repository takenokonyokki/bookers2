<div class="mx-auto my-3" style="width: 450px; height: 400px;">
  <h2>User info</h2>
  <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model:@user, local:true do |f| %>
    <div class="form-group my-4">
      <label for="inputName">Name</label>
      <div>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      </div>
    </div>
    <div class="form-group my-4">
      <label for="inputImage">Image</label>
      <div>
        <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept:"image/*" %>
      </div>
    </div>
    <div class="form-group my-4">
      <label for="inputIntroduction">Introduction</label>
      <div>
        <%= f.text_area :introduction, placeholder:"自己紹介文" %>
      </div>
    </div>
    <div>
      <%= f.submit "Update User", class: 'btn btn-secondary' %>
    </div>
    <% end %>
</div>