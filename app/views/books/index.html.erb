<%= render 'list', user: @user %>

<h1>New book</h1>
  <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>

<h1>Books</h1>
<% @books.each do |book| %>
  <%#= link_to user_path(user.id) do %>
    <%= image_tag book.user.get_profile_image(50,50) %>
  <%# end %>
  <%= book.title %>
  <%= book.body %>
<% end %>