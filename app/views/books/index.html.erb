<!--bookのindexページの左側(User info)-->
<h1>User info</h1>
<div>
  <%= image_tag @books.user.get_profile_image(100,100) %>
  <h3>name <%= @books.user.name %></h3>
  <h3>introduction <%= @books.user.introduction %></h3>
  <%# if @books == current_user %>
    <%= link_to "プロフィール編集", edit_user_path %>
  <%# end %>
</div>

<!--新規投稿画面-->
<h1>New Book</h1>
  <%= form_with model:@book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>

<!--bookのindexページの右側(Books)-->
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image(50,50) %>
  <p>Title <%= book.title %></p>
  <p>Opinion <%= book.body %></p>
</div>
<% end %>