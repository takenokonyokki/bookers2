<h1>Editing Book</h1>
<%= form_with model:@book do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
  <label for="inputImage">Opinion</label>
  <%= f.text_area :body, placeholder:"感想" %>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path(@book) %>