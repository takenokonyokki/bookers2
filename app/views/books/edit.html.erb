<div class="mx-auto my-3" style="width: 450px; height: 400px;">
  <h2>Editing Book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model:@book, local:true do |f| %>
  <div class="form-group my-4">
    <label for="inputTitle">Title</label>
    <div>
      <%= f.text_field :title, autofocus: true, placeholder:"タイトル" %>
    </div>
  </div>
  <div class="form-group my-4">
    <label for="inputImage">Opinion</label>
    <div>
      <%= f.text_area :body, placeholder:"感想" %>
    </div>
    <div class="my-4">
      <%= f.submit "Update Book", class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>

  <%= link_to "Show", book_path %>
  <%= link_to "Back", books_path %>
</div>