<h1>Book detail</h1>
<div>
  <%= link_to user_path do %>
    <%= image_tag @book.user.get_profile_image(50,50) %>
    <%= @book.user.name %>
  <% end %>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>