<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'list', user: @user %>
     <h2 class="mt-3">New book</h2>
      <%= form_with model:@books, local:true do |f| %>
        <div class="form-group">
          <div>Title</div>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <div>Opinion</div>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit "Create Book", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

    <div class="col-lg-9">
      <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag @book.user.get_profile_image(50,50) %>
                    <div>
                      <%= @book.user.name %>
                    </div>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(@book.id) do %>
                    <%= @book.title %>
                  <% end %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <% if @book.user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %>
                </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
    </div>
  </div>